<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Vista.Registro">

    <EditText
        android:id="@+id/edtUNombre"
        android:layout_width="265dp"
        android:layout_height="49dp"
        android:layout_marginTop="192dp"
        android:background="@drawable/edittext_borde"
        android:elevation="10dp"
        android:ems="10"
        android:hint="Ingrese su nombre aquí"
        android:inputType="text"
        android:paddingStart="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edtApellido"
        android:layout_width="265dp"
        android:layout_height="49dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/edittext_borde"
        android:elevation="10dp"
        android:ems="10"
        android:hint="Ingrese su apellido aquí"
        android:inputType="text"
        android:paddingStart="12dp"
        app:layout_constraintEnd_toEndOf="@+id/edtUNombre"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/edtUNombre"
        app:layout_constraintTop_toBottomOf="@+id/edtUNombre" />

    <EditText
        android:id="@+id/edtCorreo"
        android:layout_width="265dp"
        android:layout_height="52dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/edittext_borde"
        android:elevation="10dp"
        android:ems="10"
        android:hint="Ingrese su correo aquí"
        android:inputType="text"
        android:paddingStart="12dp"
        app:layout_constraintEnd_toEndOf="@+id/edtApellido"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/edtApellido"
        app:layout_constraintTop_toBottomOf="@+id/edtApellido" />

    <EditText
        android:id="@+id/edtPass"
        android:layout_width="265dp"
        android:layout_height="51dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/edittext_borde"
        android:elevation="10dp"
        android:ems="10"
        android:hint="Ingrese su contraseña aquí"
        android:inputType="text"
        android:paddingStart="12dp"
        app:layout_constraintEnd_toEndOf="@+id/edtCorreo"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edtCorreo"
        app:layout_constraintTop_toBottomOf="@+id/edtCorreo" />

    <Button
        android:id="@+id/btnRegistrar"
        android:layout_width="142dp"
        android:layout_height="59dp"
        android:layout_marginTop="64dp"
        android:text="Registrar"
        app:layout_constraintEnd_toEndOf="@+id/edtPass"
        app:layout_constraintHorizontal_bias="0.441"
        app:layout_constraintStart_toStartOf="@+id/edtPass"
        app:layout_constraintTop_toBottomOf="@+id/edtPass" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:text="Registrate"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>